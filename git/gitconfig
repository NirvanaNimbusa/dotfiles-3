[include]
	path = ~/.gitconfig-local
[core]
	excludesfile = ~/.gitignore-global
	editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RFX
[push]
	default = simple
[rebase]
	autostash = true
[merge]
	conflictstyle = diff3
[diff]
	compactionHeuristic = true
[rerere]
	enabled = true
[fetch]
	prune = true
[hub]
	protocol = https
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
